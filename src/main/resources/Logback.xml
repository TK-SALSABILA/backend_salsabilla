<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="APP_NAME" value="school-backend" />

    <!-- Nonaktifkan warning PageNotFound -->
    <logger name="org.springframework.web.servlet.PageNotFound" level="ERROR" />

    <!-- Console Appender (untuk Docker) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger aplikasi Anda -->
    <logger name="org.school.backend" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>